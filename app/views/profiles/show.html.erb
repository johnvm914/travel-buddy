<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h1>My Profile:</h1>
      <% else %>
        <h1><%= @profile.user.user_name %>'s Profile:</h1>
      <% end %>

      <%= image_tag @profile.profile_pic.url(:thumb) %>
      <p><b>Name:</b> <span><%= @profile.user.first_name %> <%= @profile.user.last_name %></span></p>
      <p><b>Age:</b> <span><%= @profile.age %></span></p>
      <p><b>Location:</b> <span><%= @profile.location %></span></p>
      <p><b>A bit about me and travel:</b><br>
        <span><%= @profile.bio %></span></p>

      <% if @profile.user.id == current_user.id %>
        <a href="/profiles/<%= @profile.id %>/edit"><button class="button tsp-btn-site">Edit Your Profile</button></a>
        <br><br>
        <%= button_to "Delete Your Profile", "/profiles/#{@profile.id}", method: :delete, class: "button tsp-btn-site" %>
        <br>
      <% else %>
        <br>
        <%= link_to "Message #{@profile.user.user_name}", new_message_path(user: @profile.user.id), class: "button tsp-btn-site" %>
        <br><br>
      <% end %>
    </div>

    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h3>My Trips:</h3>
      <% else %>
        <h3><%= @profile.user.user_name %>'s Trips:</h3>
      <% end %>
      <ul>
        <% @profile.user.trips.each do |trip| %>
          <li><a class="link-underline" href="/trips/<%= trip.id %>"><%= trip.destination %></a></li>
        <% end %>
      </ul>

      <% if @profile.user.id == current_user.id %>
        <h3>Users I'm following:</h3>
      <% else %>
        <h3>Users <%= @profile.user.user_name %> is following:</h3>
      <% end %>
      <ul>
        <% @profile.user.friends.each do |friend| %>
          <li><a class="link-underline" href="/profiles/<%= friend.id %>"><%= friend.user_name %></a></li>
        <% end %>
      </ul>
    </div>

    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h3>Trips I'm interested in:</h3>
      <% else %>
        <h3>Trips <%= @profile.user.user_name %> is interested in:</h3>
      <% end %>
      <ul>
        <% @profile.user.favorites.each do |favorite| %>
          <li><a class="link-underline" href="/trips/<%= favorite.trip.id %>"><%= favorite.trip.destination %></a></li>
        <% end %>
      </ul>
    </div> 
  </div>
</div>
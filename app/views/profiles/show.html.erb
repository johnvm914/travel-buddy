<div class="container">
  <div class="row">
    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h1>My Profile:</h1>
      <% else %>
        <h1><%= @profile.user.user_name %>'s Profile:</h1>
      <% end %>


      <p><img src=<%= @profile.image %> class="profile-image"></p>
      <p><b>Name:</b> <%= @profile.user.first_name %> <%= @profile.user.last_name %></p>
      <p><b>Age:</b> <%= @profile.age %></p>
      <p><b>Location:</b> <%= @profile.location %></p>
      <p><b>Bio:</b> <%= @profile.bio %></p>

      <% if @profile.user.id == current_user.id %>
        <a href="/profiles/<%= @profile.id %>/edit"><button class="button tsp-btn-site">Edit Your Profile</button></a>
        <br><br>
        <%= button_to "Delete Your Profile", "/profiles/#{@profile.id}", method: :delete, class: "button tsp-btn-site" %>
        <br>
      <% else %>
        <br>
        <%= link_to "Message #{@profile.user.user_name}", new_message_path(user: @profile.user.id), class: "button tsp-btn-site" %>
        <br><br>
      <% end %>
    </div>

    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h1>My Trips:</h1>
      <% else %>
        <h1><%= @profile.user.user_name %>'s Trips:</h1>
      <% end %>
      <ol>
        <% @profile.user.trips.each do |trip| %>
          <li><a href="/trips/<%= trip.id %>"><%= trip.destination %></a></li>
        <% end %>
      </ol>

      <% if @profile.user.id == current_user.id %>
        <h1>My Friends:</h1>
      <% else %>
        <h1><%= @profile.user.user_name %>'s Friends:</h1>
      <% end %>
      <ol>
        <% @profile.user.friends.each do |friend| %>
          <li><a href="/profiles/<%= friend.id %>"><%= friend.user_name %></a></li>
        <% end %>
      </ol>
    </div>

    <div class="col-md-4">
      <% if @profile.user.id == current_user.id %>
        <h1>Trips I'm interested in:</h1>
      <% else %>
        <h1>Trips <%= @profile.user.user_name %> is interested in:</h1>
      <% end %>
      <ol>
        <% @profile.user.favorites.each do |favorite| %>
          <li><a href="/trips/<%= favorite.trip.id %>"><%= favorite.trip.destination %></a></li>
        <% end %>
      </ol>
    </div> 
  </div>
</div>